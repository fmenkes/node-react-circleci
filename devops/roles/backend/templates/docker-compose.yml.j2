version: "2"

networks:
  docker:

services:
  web:
    image: {{ docker_image }}
    container_name: web
    expose:
      - "8080"
    networks:
      docker:
        aliases:
          - node
    links:
      - mongo
    environment:
      - MONGO_DB_URI=mongodb://mongo:27017/{{ mongodb_name }}
    command: yarn start

  mongo:
    image: mongo
    container_name: mongo
    ports:
      - "27017:27017"
    volumes_from:
      - mongodata
    networks:
      - docker

  mongodata:
    image: tianon/true
    volumes:
      - /data/db

  nginx:
    image: nginx
    container_name: nginx
    volumes:
      - {{ working_directory }}/nginx.conf:/etc/nginx/nginx.conf
    ports:
      - 80:80
    networks:
      - docker